<div class="container formRegister">
    <form id="log-form" class="pt-5">
        <div class="form-group headingLabel text-center">
            <header>Sign In</header><br>
        </div>
        <div class="loginRegisteringSec justify-content-center p-5">
            <!-- username -->
            <div class="form-group grp1 row justify-content-center">
                <div class="col-lg-6 column">
                    <label for="email"> Email</label>
                    <input type="email" class="form-control" id="emailInput" placeholder="me@email.com">
                </div>
            </div>
            <!-- password --->
            <div class="form-group grp3 row justify-content-center">
                <div class="col-lg-6">
                    <label for="password"> Password</label>
                    <input type="password" class="form-control" id="passwordInput" aria-describedby="passwordInput" placeholder="Shh.. Keep this a secret">
                </div>
            </div>
            <!-- button submit -->
            <div class="form-grou grp4 row justify-content-center">
                <div class="col-lg-6"><button type="submit" class="signBtn">Let's Go</button></div>
            </div>
            <!-- button submit end --->
        </div>
    </form>
</div>
